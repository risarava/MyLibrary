<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.supagorn.mylibrary">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:name=".controller.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.activity.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".controller.activity.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".controller.activity.SampleAlertDialog"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.SelectImageGallery"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.FacebookActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.RetrofitActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.SendEmailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.TabHostActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.BottomTabsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.PopupActivityTheme" />

        <activity
            android:name=".controller.activity.DrawerLayoutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar.popup" />

        <activity android:name="com.facebook.FacebookActivity"
            android:label="@string/app_name" />
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
    </application>

</manifest>